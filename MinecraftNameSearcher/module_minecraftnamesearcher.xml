<?xml version="1.0" encoding="UTF-8"?>
<project name="module_minecraftnamesearcher" default="compile.module.minecraftnamesearcher">
  <dirname property="module.minecraftnamesearcher.basedir" file="${ant.file.module_minecraftnamesearcher}"/>
  
  <property name="module.jdk.home.minecraftnamesearcher" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.minecraftnamesearcher" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.minecraftnamesearcher" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.minecraftnamesearcher" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="minecraftnamesearcher.output.dir" value="${module.minecraftnamesearcher.basedir}/out/production/MinecraftNameSearcher"/>
  <property name="minecraftnamesearcher.testoutput.dir" value="${module.minecraftnamesearcher.basedir}/out/test/MinecraftNameSearcher"/>
  
  <path id="minecraftnamesearcher.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="minecraftnamesearcher.module.production.classpath">
    <path refid="${module.jdk.classpath.minecraftnamesearcher}"/>
    <path refid="library.jsoup-1.14.3.classpath"/>
  </path>
  
  <path id="minecraftnamesearcher.runtime.production.module.classpath">
    <pathelement location="${minecraftnamesearcher.output.dir}"/>
    <path refid="library.jsoup-1.14.3.classpath"/>
  </path>
  
  <path id="minecraftnamesearcher.module.classpath">
    <path refid="${module.jdk.classpath.minecraftnamesearcher}"/>
    <pathelement location="${minecraftnamesearcher.output.dir}"/>
    <path refid="library.jsoup-1.14.3.classpath"/>
  </path>
  
  <path id="minecraftnamesearcher.runtime.module.classpath">
    <pathelement location="${minecraftnamesearcher.testoutput.dir}"/>
    <pathelement location="${minecraftnamesearcher.output.dir}"/>
    <path refid="library.jsoup-1.14.3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.minecraftnamesearcher">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.minecraftnamesearcher">
    <patternset refid="excluded.from.module.minecraftnamesearcher"/>
  </patternset>
  
  <path id="minecraftnamesearcher.module.sourcepath">
    <dirset dir="${module.minecraftnamesearcher.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.minecraftnamesearcher" depends="compile.module.minecraftnamesearcher.production,compile.module.minecraftnamesearcher.tests" description="Compile module MinecraftNameSearcher"/>
  
  <target name="compile.module.minecraftnamesearcher.production" depends="register.custom.compilers" description="Compile module MinecraftNameSearcher; production classes">
    <mkdir dir="${minecraftnamesearcher.output.dir}"/>
    <javac2 destdir="${minecraftnamesearcher.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.minecraftnamesearcher}/javac">
      <compilerarg line="${compiler.args.minecraftnamesearcher}"/>
      <bootclasspath refid="minecraftnamesearcher.module.bootclasspath"/>
      <classpath refid="minecraftnamesearcher.module.production.classpath"/>
      <src refid="minecraftnamesearcher.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.minecraftnamesearcher"/>
    </javac2>
    
    <copy todir="${minecraftnamesearcher.output.dir}">
      <fileset dir="${module.minecraftnamesearcher.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.minecraftnamesearcher.tests" depends="register.custom.compilers,compile.module.minecraftnamesearcher.production" description="compile module MinecraftNameSearcher; test classes" unless="skip.tests"/>
  
  <target name="clean.module.minecraftnamesearcher" description="cleanup module">
    <delete dir="${minecraftnamesearcher.output.dir}"/>
    <delete dir="${minecraftnamesearcher.testoutput.dir}"/>
  </target>
</project>